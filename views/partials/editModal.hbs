<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title" id="editModalLabel">修改餐廳資訊</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="#" method="post" id="editForm">
        <div class="modal-body" id="deleteContent">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="restaurantName">餐廳名稱</label>
              <input type="text" class="form-control" id="restaurantName" placeholder="餐廳名稱" name="name" required/>
            </div>
            <div class="form-group col-md-6">
              <label for="restaurantNameEn">餐廳英文名稱</label>
              <input type="text" class="form-control" id="restaurantNameEn" placeholder="餐廳英文名稱" name="name_en" required/>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="restaurantPhone">餐廳電話</label>
              <input type="tel" class="form-control" id="restaurantPhone" placeholder="餐廳電話 EX:02-87879487" name="phone" pattern="[0-9]{2}-[0-9]{8}" required/>
            </div>
            <div class="form-group col-md-6">
              <label for="restaurantClass">餐廳類別</label>
              <input
                type="text"
                class="form-control"
                id="restaurantClass"
                placeholder="餐廳類別，EX: 日本料理、中式餐點"
                name="category"
                required
              />
            </div>
          </div>
          <div class="form-group">
            <label for="restaurantAddress">地址</label>
            <input type="text" class="form-control" id="restaurantAddress" placeholder="餐廳地址" name="location" required/>
          </div>
          <div class="form-group">
            <label for="restaurantRating">餐廳評價</label>
            <input type="number" step="0.01" class="form-control" id="restaurantRating" min="0" max="5" placeholder="餐廳評價 EX:4.2" name="rating" required/>
          </div>
          <div class="form-group">
            <label for="restaurantImage">餐廳圖片</label>
            <input type="text" class="form-control" id="restaurantImage" placeholder="餐廳圖片(網路空間)" name="image" required/>
          </div>
          <div class="form-group">
            <label for="restaurantGoogleMap">餐廳Google Map</label>
            <input type="text" class="form-control" id="restaurantGoogleMap" placeholder="餐廳Google Map" name="google_map" required/>
          </div>
          <div class="form-group">
            <label for="restaurantDescription">餐廳描述</label>
            <textarea class="form-control" id="restaurantDescription" rows="3" placeholder="餐廳描述" name="description" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-warning">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>
