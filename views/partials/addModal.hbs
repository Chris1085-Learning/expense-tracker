<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-secondary">
        <h5 class="modal-title text-white" id="addModalLabel">新增收入支出</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/restaurants" method="post" id="addForm">
        <div class="modal-body" id="addContent">
          <div class="btn-group w-100 my-3" role="group" aria-label="expense type" data-toggle="button">
            <button type="button" class="btn btn-outline-secondary" id="incomeBtn" name="income">收入</button>
            <button type="button" class="btn btn-outline-secondary active" id="expenseBtn" name="expense">支出</button>
          </div>
          <div class="form-group">
            <label for="restaurantRating">金額</label>
            <input
              type="number"
              step="0.01"
              class="form-control"
              id="restaurantRating"
              min="0"
              max="5"
              placeholder="金額"
              name="rating"
              required
            />
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="restaurantName">項目名稱</label>
              <input type="text" class="form-control" id="restaurantName" placeholder="項目名稱" name="name" required />
            </div>
            <div class="form-group col-md-6">
              <label for="restaurantNameEn">日期</label>
              <input
                type="date"
                class="form-control"
                id="restaurantNameEn"
                placeholder="日期"
                name="name_en"
                required
              />
            </div>
          </div>
          <div class="form-group">
            <div class="dropdown w-100">
              <label for="restaurantName">類別</label>
              <select class="custom-select" id="sortSelect" onchange="this.form.submit();" name="method">
                <option selected disabled>類別</option>
                <option value="all">全部</option>
                <option value="_id-asc">家居物業</option>
                <option value="name-asc">交通出行</option>
                <option value="name-desc">休閒娛樂</option>
                <option value="category-asc">餐飲食品</option>
                <option value="category-desc">其他</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="restaurantDescription">備註</label>
            <textarea
              class="form-control"
              id="restaurantDescription"
              rows="3"
              placeholder="備註"
              name="description"
              required
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-primary">新增</button>
        </div>
      </form>
    </div>
  </div>
</div>
